[Unit]
Description=Kitchen Mic - Audio Conversation Recorder
After=network.target sound.target
Wants=sound.target

[Service]
Type=simple
ExecStart=/usr/local/bin/kitchen-mic start
ExecStop=/usr/local/bin/kitchen-mic stop
Restart=always
RestartSec=3

# Run as kitchen_mic user
User=kitchen_mic
Group=kitchen_mic

# Give full access to system
ProtectSystem=no
ProtectHome=no
PrivateTmp=no

# Environment setup
Environment=PYTHONUNBUFFERED=1
WorkingDirectory=/opt/kitchen_mic

[Install]
WantedBy=multi-user.target
